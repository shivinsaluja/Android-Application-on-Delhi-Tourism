<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.delhitourism.MonumentsActivity">
    <TextView
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:layout_width="match_parent"
        android:text="Lodhi Garden"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:onClick="lodhigarden"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Deer Park"
        android:onClick="deerpark"
        android:layout_weight="1"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:layout_width="match_parent"
        android:text="Garden Of Five Senses"
        android:layout_height="130dp"
        android:onClick="garden5senses"
        android:layout_weight="1"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:text="Mughal Gardens"
        android:onClick="mughalgarden"
        android:layout_weight="1"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        style="@style/CategoryStyle"
        android:background="@color/category_phrases"
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:text="Talkatora Garden"
        android:onClick="talkatora"
        android:layout_weight="1"

        />


</LinearLayout>
</ScrollView>
